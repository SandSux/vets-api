{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "data",
    "meta"
  ],
  "properties": {
    "data": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "letter_base.json"
      }
    },
    "meta": {
      "properties": {
        "address": {
          "properties": {
            "street": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "state": {
              "type": "string"
            },
            "country": {
              "type": "string"
            },
            "postalCode": {
              "type": "string"
            }
          },
          "type": "object",
          "required": [
            "street",
            "city",
            "state",
            "country",
            "postalCode"
          ]
        }
      },
      "type": "object"
    }
  }
}
